<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="html" encoding="UTF-8" indent="yes"/>
    <xsl:key name="courses-by-teacher" match="course" use="teachers/teacher"/>
    <xsl:key name="courses-by-keyword" match="course" use="keywords/keyword"/>
    <xsl:template match="/">
        <html>
            <head>
                <title>Наши курсы</title>
            </head>
            <body>
                <h1>Наши курсы</h1>
                <h3>Курсы, которые читает Борисов И.О.</h3>
                <ul>
                    <xsl:apply-templates select="key('courses-by-teacher', 'Борисов И.О.')" mode="teacher"/>
                </ul>
                <h3>Курсы, которые используют XML</h3>
                <ul>
                    <xsl:apply-templates select="key('courses-by-keyword', 'XML')" mode="keyword"/>
                </ul>
                <h3>Курсы, которые читает Борисов И.О. и используют XSLT</h3>
                <ul>
                    <xsl:apply-templates select="key('courses-by-teacher', 'Борисов И.О.')[
                        keywords/keyword = 'XSLT']" mode="teacher-keyword"/>
                </ul>
            </body>
        </html>
    </xsl:template>
    <xsl:template match="course" mode="teacher">
        <li><xsl:value-of select="title"/></li>
    </xsl:template>
    <xsl:template match="course" mode="keyword">
        <li><xsl:value-of select="title"/></li>
    </xsl:template>
    <xsl:template match="course" mode="teacher-keyword">
        <li><xsl:value-of select="title"/></li>
    </xsl:template>
    
</xsl:stylesheet>
